<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><a class="text-muted fw-light" href="/Book">Book /</a> News</h4>

    <!-- Basic Bootstrap Table -->
    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-body">
                    <form id="frmCreate">
                        <div class="row">
                            <div class="mb-2 col-md-2 error-container">
                                <label class="form-label" for="basic-default-fullname">Book code</label>
                                <input type="text" class="form-control" name="Code" />
                            </div>
                            <div class="mb-6 col-md-6 error-container">
                                <label class="form-label" for="basic-default-message">Book name</label>
                                <input type="text" class="form-control" name="Name" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-4 col-md-4 error-container">
                                <label class="form-label" for="basic-default-message">Category</label>
                                <input type="text" class="form-control" name="Category" />
                            </div>
                            <div class="mb-4 col-md-4 error-container">
                                <label class="form-label" for="basic-default-message">Author</label>
                                <input type="text" class="form-control" name="Author" />
                            </div>
                           
                        </div>
                        <div class="row">
                            <div class="mb-4 col-md-4 error-container">
                                <label class="form-label" for="basic-default-message">Publishing company</label>
                                <input type="text" class="form-control" name="Publisher" />
                            </div>
                            <div class="mb-4 col-md-4 error-container">
                                <label class="form-label" for="basic-default-fullname">Quantity</label>
                                <input type="text" class="form-control" name="Quantity" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-4 col-md-4 error-container">
                                <label class="form-label " for="basic-default-fullname">Activities</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" name="IsActive" checked="">
                                    <label class="form-check-label" for="defaultCheck3"></label>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-outline-primary" id="btnCreate">Add</button>
                        <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!--/ Basic Bootstrap Table -->
</div>

@section PageJs {
    <script src="~/Assets/Scripts/Book/Create.js"></script>
}